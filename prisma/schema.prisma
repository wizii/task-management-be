// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @default(autoincrement()) @id
  name String
}

model Column {
  id Int @default(autoincrement()) @id
  name String
  color String?
  board Int
}

model Task {
  id Int @default(autoincrement()) @id
  name String
  description String
  parent Int?
  column Int
  board Int
}
